@page
@model OnlineExamination.Pages.Students.EditModel
@{
}
<h1>Edit</h1>

<h4>Student</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Student.Id" />
            <input type="hidden" asp-for="Student.ImagePath" />
            <div class="form-group">
                <label asp-for="Student.Name" class="control-label"></label>
                <input asp-for="Student.Name" class="form-control" />
                <span asp-validation-for="Student.Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.Email" class="control-label"></label>
                <input asp-for="Student.Email" class="form-control" />
                <span asp-validation-for="Student.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.PhoneNumber" class="control-label"></label>
                <input asp-for="Student.PhoneNumber" class="form-control" />
                <span asp-validation-for="Student.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.Gender" class="control-label"></label>
                <select id="Student.Gender" name="Student.Gender" class="form-control">
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                </select>
                <span asp-validation-for="Student.Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="RefFile" class="control-label">Select Profile Image</label>
                <input type="file" asp-for="RefFile" class="form-control" />
                <span asp-validation-for="RefFile" class="text-danger"></span>
                @if (Model.Student.ImagePath != null)
                {
                    <img src=" /Uploads/@Html.DisplayFor(modelItem => Model.Student.ImagePath)" style="width:80px" class="img-thumbnail" />
                }
            </div>
            <div class="form-group">
                <label asp-for="Student.examMark" class="control-label"></label>
                <input asp-for="Student.examMark" class="form-control" />
                <span asp-validation-for="Student.examMark" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Student.examStatus" class="control-label"></label>
                <select id="Student.examStatus" name="Student.examStatus" class="form-control">
                    <option value="Passed">Passed</option>
                    <option value="Failed">Failed</option>
                </select>
                <span asp-validation-for="Student.examStatus" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-info" />
                <a asp-page="/Students/List" class="btn btn-outline-info">Back to List</a>
            </div>
        </form>
    </div>
</div>