@page
@model OnlineExamination.Pages.Students.DeleteModel
@{
}

<h2>Delete</h2>

<h3>Are you sure you want to delete this Student?</h3>
<div>
    <dl class="dl-horizontal">
        <dt>
            @Html.DisplayNameFor(model => model.Student.Id)
        </dt>
        <dd>
            @Html.DisplayFor(model => model.Student.Name)
        </dd>
    </dl>

    <form method="post">
        <button type="submit" class="btn btn-danger">Yes</button>
        <a asp-page="/Students/List" class="btn btn-outline-info">Cancel</a>
    </form>
</div>