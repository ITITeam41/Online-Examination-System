@page
@model OnlineExamination.Pages.ExamCreation.CreateExamModel
@{
}
<form method="post">
    <input type="hidden" asp-for="@Model.exam.ExamId" />

    <div>
        <label asp-for="exam.Name"></label>
        <input asp-for="exam.Name" class="form-control" />
    </div>
    <div>
        <label asp-for="@Model.NomOfQuestions">Number Of Questions</label>
        <input asp-for="@Model.NomOfQuestions" class="form-control" min="1" required/>
    </div>
    <div>
        <label asp-for="exam.Duration">Duration</label>
        <input asp-for="exam.Duration" class="form-control" />
    </div>
    <div class="form-group row">
        <label for="example-datetime-local-input" class="col-2 col-form-label">Exam Start</label>
        <div class="col-10">
            <input asp-for="exam.ExamStart" class="form-control" type="datetime-local" value="2021-05-20T13:45:00" id="example-datetime-local-input">
        </div>
    </div>
        <div>
            <label asp-for="exam.totalMark"> Total Marks</label>
            <input asp-for="exam.totalMark" class="form-control" />
        </div>
        <div>
            <label asp-for="exam.passMark">Pass Mark</label>
            <input asp-for="exam.passMark" class="form-control" />
        </div>
        <div class="form-group" style="margin-top:15px">
            <input type="submit" value="Save" class="btn btn-info" />
            <a asp-page="/Students/List" class="btn btn-outline-info">Back to List</a>
        </div>
</form>